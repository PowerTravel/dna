	COLLISION_GRID_BOX_SIZE: 1.0

	CHAIN_LENGTH: 100
	CHAIN_RADIUS: 0.3

	PARTICLE_RADIUS: 0.3

	SIMULATION_TIME: 100
	DELTA_TIME: 0.01

	STRIDES: 1
	SAMPLES: 1
	EXP: false

	TYPE: fg
	VERBOSE: true
	OUTFILE: ../matlab/Distance/distance.dna


