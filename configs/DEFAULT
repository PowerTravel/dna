% The default config which gives a basic fast simulation. 
% This config is if no other configfile is called

RUN: distance

	NAME: sim1

	COLLISION_GRID_BOX_SIZE: 1.0

	CHAIN_LENGTH: 3000
	CHAIN_RADIUS: 0.4

	%PARTICLE_RADIUS: 0.3
	PARTICLE_RADIUS_MIN: 0.01
	PARTICLE_RADIUS_MAX: 0.4
	PARTICLE_RADIUS_STEP: 3
	DENSITY: 0.95

	SIMULATION_TIME: 100
	DELTA_TIME: 0.01

	STRIDES: 100
	SAMPLES: 300
	EXP: true

	TYPE: fg
	VERBOSE: true
	OUTFILE: ../matlab/Distance/distance_1.dna


